<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kotoff.entropycalculator.CalculatorActivity">

    <TextView
        android:text="Количество слогаемых"
        android:layout_height="wrap_content"
        android:id="@+id/countProbs"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_width="300sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/numberAdd"
        android:text="0"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/countProbs" />

    <LinearLayout
        android:id="@+id/adder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countProbs"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="#ccddff"
        android:padding="4dp">
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="text|number|numberDecimal"
            android:text="0"
            android:ems="10"
            android:id="@+id/prob"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textSize="30dp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            />

        <Button
            android:text="добавить вероятность"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adder_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:elevation="0dp"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/adder">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expression"
            android:adjustViewBounds="true"
            android:divider="@drawable/separator"
            android:dividerPadding="3dp"
            android:orientation="vertical"
            android:showDividers="middle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:padding="1dp">

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
